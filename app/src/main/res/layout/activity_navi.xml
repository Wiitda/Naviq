<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- 주행화면 생성 -->
    <com.kakaomobility.knsdk.ui.view.KNNaviView
        android:id="@+id/navi_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 상단 검색바 -->
    <LinearLayout
        android:id="@+id/search_bar_container"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/rectangle_2"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/search_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="어디로 갈까요?"
            android:textColor="#999999"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/mic_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_mic"
            android:contentDescription="음성 검색" />

    </LinearLayout>

    <!-- 태그 버튼 -->
    <LinearLayout
        android:id="@+id/tag_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/search_bar_container"
        app:layout_constraintStart_toStartOf="parent">

        <!-- 버튼 1 -->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/search_black_tag"
            android:text="💧 침수지역"
            android:textColor="@android:color/white" />

        <!-- 버튼 2 -->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/search_black_tag"
            android:text="💥 싱크홀 발생지역"
            android:textColor="@android:color/white"
            android:paddingHorizontal="14dp"/>
    </LinearLayout>

    <!--  하단 바  -->
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="303dp"
        android:layout_height="68dp"
        android:layout_marginBottom="22dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@drawable/search_black_tag"
        android:gravity="center"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 재난 정보 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/btn_disaster"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_disaster"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="재난 정보"
                android:textColor="#FFFFFF"
                android:textSize="12sp"/>
        </LinearLayout>

        <!-- 현재 위치 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_location"/>
        </LinearLayout>

        <!-- 더보기 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_more"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="더보기"
                android:textColor="#FFFFFF"
                android:textSize="12sp"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


