<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 위치/네트워크 권한 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>  <!-- 추가 -->

    <application
        android:name=".KNApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Nav">

    <meta-data
        android:name="com.kakao.sdk.AppKey"
        android:value="96d82c504cfe9f84bf4b0fec5dd5d657" />

    <activity
        android:name=".MainActivity"
        android:exported="true"
        android:label="@string/app_name"
        android:theme="@style/Theme.Nav">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
    </activity>

    <activity
        android:name=".MapSearchActivity"
        android:exported="false"
        android:label="검색" />

    <activity
        android:name=".MapActivity"
        android:exported="false"
        android:label="지도 화면" />

        <activity
            android:name=".NavigationActivity"
            android:exported="false"
            android:label="경로 탐색" />
        <activity
            android:name=".NavigationPreviewActivity"
            android:exported="false"
            android:label="경로 미리보기" />

        <activity
            android:name=".SafetyApiTestActivity"
            android:exported="false"
            android:label="재난문자 테스트" />

    </application>
</manifest>